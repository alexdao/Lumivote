<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/about_text_padding"
        tools:context="com.alexdao.democracy.ui.about_tab.AboutFragment">

        <TextView
            android:id="@+id/about_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_text_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/about_title_font_size" />

        <TextView
            android:id="@+id/about_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_title_text"
            android:text="@string/about_summary"
            android:textSize="@dimen/about_text_font_size" />

        <TextView
            android:id="@+id/about_libraries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_summary"
            android:text="@string/about_libraries"
            android:textSize="@dimen/about_text_font_size" />

        <TextView
            android:id="@+id/about_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_libraries"
            android:text="@string/about_license_text"
            android:textSize="@dimen/about_text_font_size" />

        <TextView
            android:id="@+id/about_credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_license"
            android:autoLink="web"
            android:gravity="end"
            android:text="@string/about_credit"
            android:textColor="@android:color/black"
            android:textSize="@dimen/about_text_font_size" />

    </RelativeLayout>
</ScrollView>